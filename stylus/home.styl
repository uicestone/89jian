@import "nib"
@import "mixins"

$hide
    display: none

.full-section
    height:502px
    text-align:center
    color:#fff
    text-shadow: 2px 2px 2px rgba(0,0,0,0.75)
    padding-top:40px
    margin-top:-40px
    background-position: 0 40px
    background-repeat: no-repeat
    .h2
        font-size: 44px
        padding-top: 215px
        margin-top: 0
        margin-bottom: 15px
    p
        font-size: 23px
    for n in 1..4
        &.section-bg-{n}
            background-image:url(img/home-section-bg- n.jpg)

.navpanel
    background: url(img/home-nav-panel.png) no-repeat
    height: 588px
    width: 41px
    padding-top: 40px
    position: fixed
    top: 50px
    left: 0
    display: none
    .nav
        height: 100%
    li
        @extend $vertical-layout
        font-size: 16px
        padding: 0 11px
        a
            display: inline-block
            color:#000
            &:hover
                background-color: #fff
                text-decoration: underline
        .split
            color:#000
            display:inline-block
            margin: 10px 0
        &.last:after
            content:""
        &.active
            a
                color:red

