        .selections
            clearfix()
            margin-bottom: 125px
            margin-right: -20px
            .item
                float:left
                margin-right: 20px
                height: 140px
                width: 211px
                .title
                    float:left
                    width:50px
                    margin-right:5px
                    .name
                        line-height: 1
                        font-size: 28px
                        width: 1em
                    .spell
                        font-size: 12px
