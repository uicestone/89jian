.seasons
    .title
        padding: 0 15px
        font-size: 38px
        margin-bottom: 10px
    .subtitle
        padding: 0 15px
        font-size: 20px
        margin-bottom: 30px
    .body
        padding: 0 15px
        font-size: 14px
        margin-bottom: 230px