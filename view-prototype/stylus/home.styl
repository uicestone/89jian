@import "nib"
@import "mixins"

.full-section
    height:502px
    text-align:center
    color:#fff
    text-shadow: 2px 2px 2px rgba(0,0,0,0.75)
    h2
        font-size: 44px
        padding-top: 215px
        margin-top: 0
        margin-bottom: 15px
    p
        font-size: 23px
    for n in 1..4
        &.section-bg-{n}
            background:url(img/home-section-bg- n.jpg)

.enviroment
    background-color: green
    color:#fff
    .container
        position: relative
    .head
        @extend $vertical-layout
        position: absolute
        height: 245px
        top: 65px
        left: 0
        .title
            margin:0
            font-size: 49px
            line-height: 1.2
            margin-left: 20px
        .describe
            font-size: 14px
            height:195px
    .features
        background: url(img/home-features.png) right no-repeat
        right: 0
        top: 70px
        width: 650px
        height: 200px
        position: absolute
        .item
            @extend $vertical-layout
            font-size: 24px
            margin-right: 135px
            margin-left: 40px
            padding-top: 45px
            line-height: 1.2
    .content
        @extend $vertical-layout
        width: 100%
        height: 520px
        padding-top: 380px
        padding-bottom: 180px
        font-size: 26px
        margin-bottom: 44px
        line-height: 1.35
        text-indent: 2em
        p
            margin-left: 40px

.traditional
    .container
        background: url(img/home-traditional-bg.png) no-repeat
        position: relative
    .head
        clearfix()
        padding-top: 83px
        padding-bottom: 42px
        .title
            @extend $vertical-layout
            height: 165px
            margin-left: 18px
        .desc
            @extend $vertical-layout
            height: 240px
            font-size: 14px
    .main-article
        @extend $vertical-layout
        clearfix()
        width: 100%
        padding-bottom: 270px
        margin:0 35px
        .title
            height:330px
            margin-left: 43px
        .content
            font-size: 20px
            height: 410px
            p
                margin-left: 31px
    .original
        clearfix()
        margin-bottom: 150px
        .refuse
            float: right
            margin-right: 35px
        .article
            float: left
            width: 290px
            .title
                @extend $vertical-layout
                font-size: 49px
                margin-left: 22px
                height: 290px
                line-height: 1
            .content
                @extend $vertical-layout
                font-size: 14px

