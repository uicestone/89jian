@import "nib"
@import "mixins"

body
    @extend $font-serif
    line-height: 1.5

ul
    list-style-type: none
    padding: 0

.container
    padding: 0
    width: 940px

.clearfix
    clearfix()

.banner
    background-color: #1e2f36
    color: #fff
    height: 517px
    .container
        position: relative
    .account
        position: absolute
        right: 14px
        top: 25px
        .item
            margin-right: 10px
            color: inherit
    .logo
        margin: 30px auto
        display: block
    .slogan
        text-align: center
        font-size: 102px
        margin-top: 30px
        color: inherit
        line-height: 1
        .pink
            color: #df4d65
    .spliter
        background-image: url(img/spliter.png)
        background-repeat: no-repeat
        background-position: center center
        padding: 18px
        height: 0
        margin: 0
        border: none
    .subslogan
        font-size: 20px
        color: inherit
        text-align: center

.navigation
    height: 40px
    line-height: 1
    box-shadow: 0 5px 5px #b4b4b4
    .navbar
        border: none
        min-height: 40px
        color: #1e2f36
        .navbar-nav
            > .active > a
                color: #cf0019
            > li > a
                color: inherit
                padding: 10px 18px

.footer
    @extend $font-sans-serif
    background: url(img/wave-dot.png) repeat-x top
    height: 850px
    background-color: #1e2f36
    color: #fff
    .contact
        clearfix()
        padding-top: 97px
        padding-bottom: 46px
        border-bottom: 1px solid #4b595e
        .map
            width:506px
            height:260px
            background-color:#f8f8f8
            margin-right: 38px
            float:left
        .info
            float:left
            .title
                font-size:20px
                margin-bottom:16px
            .address
                font-size:14px
                margin-bottom:12px
    .link-groups
        padding-top: 32px
        padding-bottom: 22px
        border-bottom: 1px solid #4b595e
        clearfix()
        .group 
            .title
                margin-bottom: 30px
            li
                a
                    color:#fff
    .copyright
        padding-top: 30px
        text-align:center
